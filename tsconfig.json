{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": ".",
    // "paths": {
    //   "@cli/*": ["./src/cli/*"],
    //   "@cos/*": ["./src/cos/*"],
    //   "@utils/*": ["src/utils/*"],
    //   "@flags/*": ["src/flags/*"]
    // },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": false,
    "moduleDetection": "force",
    "preserveSymlinks": false
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
